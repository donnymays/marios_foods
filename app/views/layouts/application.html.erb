<!DOCTYPE html>
<html>
  <head>
    <title>Marios Foods</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

     <link href="https://fonts.googleapis.com/css2?family=Oswald&family=Pacifico&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <nav class="navbar">
        <a class="navbar-brand" href="/users/sign_in">Mario's</a>
        <div class="nav-bar-links">
          <a class="nav-item nav-link" href="/users/sign_in">Home <span class="sr-only">(current)</span></a>
          <a class="nav-item nav-link" href="/products">Inventory</a>
          <a class=" nav-item nav-link" href="/users/sign_out" data-method="delete" value="<%= destroy_user_session_path%>">Sign Out</a>
        </div>
      </nav>

    <%= flash[:alert] %>
    <%= flash[:notice] %>
      <%= yield %>

    </div>
  </body>
</html>
