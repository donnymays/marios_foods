<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :author %>
  <%= f.label :content %>
  <%= f.text_area :content, placeholder: "50-250 words please" %>
  <%= f.label :rating %>
  <%= f.number_field :rating, in: 1..5 %>
  <%= f.submit %>
<% end %>