
<h1>Products</h1>
<% if @new_products.any?%>
  <h2> Check out what's new: <h2>
  <ul>
    <% @new_products.each do |product| %>
      <li><%= link_to product.name, product_path(product) %></li>
    <% end %>
  </ul>
<% end %>

<% if Product.most_reviewed %>
  <h3> Check out our <em>Most Reviewed Product: </em> <%= link_to Product.most_reviewed.name, product_path(Product.most_reviewed)  %></h3>
<% end %>

<div class="product_list">
  <% if @products.any? %>
    <ul>
      <% @products.each do |product| %>
        <li><%= link_to product.name, product_path(product) %></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no products yet.</p>
  <% end %>
</div>


<p><%= link_to "Create new product", new_product_path %></p>